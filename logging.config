[loggers]
keys=root,rsem_pipeline,isamples_parser,soft_parser,utils_main,utils_download,soft_parser

[logger_root]
handlers=
level=NOTSET

[logger_rsem_pipeline]
handlers=screen,file
level=NOTSET
qualname=rsem_pipeline_logger

[logger_soft_parser]
handlers=screen,file
level=NOTSET
qualname=soft_parser

[logger_isamples_parser]
handlers=screen,file
level=NOTSET
qualname=isamples_parser

[logger_utils_main]
handlers=screen,file
level=NOTSET
qualname=utils_main

[logger_utils_download]
handlers=screen,file
level=NOTSET
qualname=utils_download

[formatters]
keys=standard

[formatter_standard]
format=%(levelname)s|%(asctime)s|%(name)s:%(message)s

[handlers]
keys=file,screen

[handler_file]
class=FileHandler
formatter=standard
level=DEBUG
args=('rsem_pipeline.log',)

[handler_screen]
class=StreamHandler
formatter=standard
level=DEBUG
args=(sys.stdout,)