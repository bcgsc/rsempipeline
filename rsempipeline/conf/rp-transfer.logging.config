[loggers]
keys: root,
      rp_transfer,
      isamp_parser,
      soft_parser,
      misc,
      pre_pipeline_run,
      paramiko.transport

[logger_root]
handlers=
level=NOTSET

[logger_rp_transfer]
handlers=screen,file
level=NOTSET
qualname=rp_transfer

[logger_soft_parser]
handlers=screen,file
level=NOTSET
qualname=rsempipeline.parsers.soft_parser

[logger_isamp_parser]
handlers=screen,file
level=NOTSET
qualname=rsempipeline.parsers.isamp_parser

[logger_misc]
handlers=screen,file
level=NOTSET
qualname=rsempipeline.utils.misc

[logger_pre_pipeline_run]
handlers=screen,file
level=NOTSET
qualname=rsempipeline.utils.pre_pipeline_run

[logger_paramiko.transport]
handlers=screen,file
level=WARNING
qualname=paramiko.transport

[formatters]
keys=standard

[formatter_standard]
format=%(levelname)s|%(asctime)s|%(name)s:%(message)s

[handlers]
keys=file,screen

[handler_file]
class=FileHandler
formatter=standard
level=DEBUG
args=('log/rsem_transfer_{0}.log'.format(time.strftime('%Y-%m-%d_%H:%M', time.localtime())), )

[handler_screen]
class=StreamHandler
formatter=standard
level=INFO
args=(sys.stdout,)